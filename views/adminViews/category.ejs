<%- include('./layout/header.ejs') %>
    <div class="container-fluid mt-5">
        <div class="row ">
            
            <div class="col-lg-12 grid-margin stretch-card ">
                <div class="card">
                    <div class="card-body ">
                        <div class="row d-flex justify-content-between m-4">
                            <div class="col-md-6">
                                <h4 class="card-title  ">Category List</h4>
                            </div>
                            <div class="col-md-6 text-end">
                                <form action="/admin/category/add_category">
                                    <button class="btn btn-success">Add New Category</button>
                                </form>
                            </div>
                        </div>
                      
                        <table class="table table-striped pt-4">
                            <thead>
                                <tr>
                                    <th> Category </th>
                                    <th> Category Name</th>
                                   
                                    <th> Available </th>
                                    <!-- <th> View </th> -->
                                    <th> Edit </th>
                                    <th> Delete </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data){ %>

                                    <% for(let i=0;i<data.length;i++){ %>

                                        <tr>
                                            <td class="py-1">
                                                <%= data[i]._id %>
                                            </td>
                                            <td>
                                                <%= data[i].categoryName %>
                                            </td>
                                            <td>
                                                <%= data[i].isAvailable %>
                                            </td>
                                           
                                            <!-- <td>
                                                <form action="/admin/users?id=<%= data[i]._id %>" method="post">
                                                    <button class="btn btn-danger">View</button>
                                                </form>
                                            </td> -->
                                            <td>
                                                
                                                   <a href="/admin/category/edit_category?id=<%= data[i]._id %>" ><button class="btn btn-danger">Edit</button></a> 
                                               
                                            </td>
                                            <td>
                                                <form action="/admin/category/unlist?id=<%= data[i]._id %>" method="post">
                                                    <button class="btn btn-danger">List/Unlist</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% } %>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('./layout/footer.ejs') %>