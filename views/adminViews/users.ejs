<%- include('./layout/header.ejs') %>

  <div class="container-fluid">
    <div class="row ">
      <div class="col-lg-12 p-5 stretch-card ">
        <div class="card">
          <div class="card-body ">
            <h4 class="card-title m-4 ">Users List</h4>

            <table class="table table-striped p-4">
              <thead>
                <tr>
                  <th> User </th>
                  <th> Name</th>
                  <th> E-mail </th>
                  <th> Phone Number </th>
                  <th> Block/Unblock </th>
                </tr>
              </thead>
              <tbody>
                <% if(data){ %>

                  <% for(let i=0;i<data.length;i++){ %>

                    <tr>
                      <td class="py-1">
                        <img src="/public/images/faces-clipart/pic-1.png" alt="image" />
                      </td>
                      <td>
                        <%= data[i].name %>
                      </td>
                      <td>
                        <%= data[i].email %>
                      </td>
                      <td>
                        <%= data[i].phone %>
                      </td>
                      <td>
                        <% if(data[i].isBlocked) { %>
                          <form action="/admin/users?id=<%= data[i]._id %>" method="post">
                            <button class="btn btn-danger">unblock</button>
                          </form>
                          <%} else{ %>
                            <form action="/admin/users?id=<%= data[i]._id %>" method="post">
                              <button class="btn btn-success">block</button>
                            </form>
                            <% } %>
                      </td>
                    </tr>
                    <% } %>
                      <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('./layout/footer.ejs') %>