                  <input
                    type="password"
                    id="password"
                    class="form-control form-control-lg "
                    name="password" placeholder="Password"
                    onchange="passwordValidate()"
                    />
                    <span id="Password"></span>
                    <!-- <a href="/forgotPassword" style="text-decoration: none;padding-left: 10px;">forgot password?</a> -->
                </div>
