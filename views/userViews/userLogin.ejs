              <form action="" method="post"  onsubmit="return allChecking()">
                <!-- Email input -->
                <div class="form-outline mb-4 ps-md-4 pe-md-4">
                  <label class="text-primary pl-2" for="email">demo email : vishnu123@gmail.com</label>
                  <input
