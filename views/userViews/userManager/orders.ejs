<%- include('../layouts/headerUser.ejs') %>
    <div class="container-fluid mt-lg-3">
        <div class="row justify-content-center m-1  mb-3 ">
            
            <div class="col-md-12">
                <div class="container mt-lg-2 justify-content-center shadow rounded-3 ">
                    <div class="row justify-content-center  mb-3 bg-white shadow rounded-3">
                        <div class="col-md-12 p-3 shadow rounded-3">
                            <div class="row">
                                <div class="p-sm-5">
                                    <h6>Your Orders</h6>
                                </div>
                                <div class="col-lg-12 col-md-6 col-sm-12">
                                <% if(orderDetails.length>0){ %>
                                    <% orderDetails.forEach((element)=>{ %>
                                                
                                    <a href="/kart/ckeckout/order?id=<%=element._id %>" style="text-decoration: none;">
                                        <div class="card ">
                                            <div class="card-body row d-flex ">
                                                <div class="col-md-10">
                                                <% element.products.forEach((data)=>{ %>
                                                    <div class="row d-flex justify-content-center p-1">
                                                        <div class="col-md-3">
                                                           
                                                                <img 
                                                                        alt="image" src="../../../productImages/<%=data.image[0] %>"
                                                                        style="height: 80px;width: 80px;">
                                                          
                                                        </div>
                                                        <div class="col-md-6 ">
                                                            <div>
                                                                <span><b><%=data.p_name %></b></span>
                                                            </div>
                                                           
                                                            <div>
                                                                <span>color: <%=data.color %></span>
                                                            </div>
                                                            <div >
                                                            
                                                                <span>Qty: <%=data.quantity %></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3 ">
                                                            <div >
                                                                <h6><small>Price: <%=data.price %></small></h6>
                                                            </div>
                                                        </div>    
                                                    </div>
                                               
                                                <% }) %>
                                            </div>
                                                <div class="col-md-2 ">
                                                  
                                                        <h6><small>Paid Price: <%=element.payment.amount %></small></h6>
                                                        <span> <smal>Status: <%=element.status %></smal></span>
                                                   
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </a>
                                    <% }) %>
                                    <% }else{%>

                                        <div class="row justify-content-center mt-3">
                                          <div class="col-md-6 pt-3 ">
                                            <div class="card text-center mb-4 p-2">
                                              <header class="card-header border-0">
                                                <h6 class="card-title mt-2 text-center">Orderlist is Empty!!</h6>
                                              </header>
                                              <div class="row justify-content-center p-4">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-bag-x" viewBox="0 0 16 16">
                                                  <path fill-rule="evenodd" d="M6.146 8.146a.5.5 0 0 1 .708 0L8 9.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 0 1 0-.708z"/>
                                                  <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                                                </svg>
                                              </div>
                                              <div>
                                              <article class="card-body text-center mt-3">
                                                <h6 class="card-title mt-2 text-center">Explore our wide selection and find something you like!!</h6>
                                                <a href="/"><span>Continue shopping</span></a>
                                              </article>
                                            </div>  
                                          </div>  
                                        </div> 
                                        <% }%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>